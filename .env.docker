# Council of AI - Docker Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_USER=councilof
DB_PASSWORD=councilof_secure_pass_2025_CHANGE_ME
DB_NAME=councilof_ai
DB_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=councilof_redis_pass_2025_CHANGE_ME
REDIS_PORT=6379

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
BACKEND_PORT=8000

# Security Keys (MUST be changed in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-IN-PRODUCTION
JWT_SECRET_KEY=your-jwt-secret-key-here-CHANGE-IN-PRODUCTION

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Environment
ENVIRONMENT=development
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# ============================================================================
# PGADMIN CONFIGURATION
# ============================================================================
PGADMIN_EMAIL=admin@councilof.ai
PGADMIN_PASSWORD=admin_secure_pass_2025_CHANGE_ME
PGADMIN_PORT=5050

# ============================================================================
# REDIS COMMANDER CONFIGURATION
# ============================================================================
REDIS_COMMANDER_PORT=8081
